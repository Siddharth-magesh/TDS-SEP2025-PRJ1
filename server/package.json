  "author": "",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "@octokit/rest": "^20.0.2",
    "axios": "^1.6.2",
    "dotenv": "^16.3.1"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.1",
    "eslint": "^8.55.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
