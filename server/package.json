{
  "name": "llm-code-deployment-server",
  "version": "1.0.0",
  "description": "LLM-assisted code deployment server with GitHub Pages integration",
  "main": "src/index.js",
  "type": "module",
  "scripts": {
    "start": "node src/index.js",
    "dev": "node --watch src/index.js",
